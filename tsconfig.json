{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es6",
    "sourceMap": true,

    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "skipLibCheck": true,

    "lib": ["es2018", "dom", "DOM.Iterable"],
    "types": ["node", "chrome", "react"],

    "jsx": "react",
    "allowJs": true,
    "jsxFactory": "createElement",

    "baseUrl": "src",
    "paths": {
      "~/core/*": ["core/*"],
      "~/modules/*": ["modules/*"],
      "~/shared/*": ["shared/*"],
      "~/utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}

